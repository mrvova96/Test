; Скрипт для акций

<script>
const contMite = document.querySelector('.cont_mite');
const contMite2 = document.querySelector('.cont_mite2');
const arrows = document.querySelectorAll('.arrow');

arrows.forEach(arrow => {
    arrow.addEventListener('click', () => {
        if (contMite.style.opacity !== '0') {
            contMite.style.opacity = 0; // Скрываем блок cont_mite и показываем cont_mite2
            contMite2.style.opacity = 1;
        } else {
            contMite.style.opacity = 1; // Скрываем блок cont_mite2 и показываем cont_mite
            contMite2.style.opacity = 0;
        }
    });
});
</script>